<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="net.seehope.college.mapper.UserMapper">
	<select id="findUsers"
		resultType="net.seehope.college.entity.User">
		select * from t_user
	</select>
	<!--获取总条数 -->
	<select id="getUserCount" resultType="java.lang.Integer">
		select count(0) from t_user
	</select>
	<!-- 根据邮箱获取用户 -->
	<select id="get_user_by_email" resultType="java.lang.Integer"
		parameterType="java.lang.String">
		select count(0) from t_user where email = #{email}
	</select>
	<insert id="insert_user"
		parameterType="net.seehope.college.entity.User">
		insert into t_user
		(create_time,username,password,email,is_lock,is_active,login_ip,login_faile,type)
		values
		(#{create_time},#{username},#{password},#{email},#{is_lock},#{is_active},#{login_ip},#{login_faile},#{type})
	</insert>
</mapper>